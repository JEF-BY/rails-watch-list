<%= render '_bannerList' %>
<div>
  <div>
    <h3>My Lists</h3>
    <div>
      <% @lists.each do |list| %>
        <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(list.url)">
        <%= list.name %>
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to 'Create a movie list', new_list_path %>
  </div>
</div>
