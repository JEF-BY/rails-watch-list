<%= render 'navbar' %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media1.fdncms.com/inlander/imager/u/original/24484900/movie-theater.jpg);">
  <div>
    <h1>Save any kind of movies</h1>
    <p>Classic</p>
  </div>
</div>
<div class="container">
  <div>
    <h3>My Lists</h3>
    <div class="d-flex">
      <% @lists.each do |list| %>
        <% if list.photo.attached? %>
          <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
            <%= link_to list.name, list_path(list) %>
          </div>
        <% else %>
          <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "uqinu0kxhlrvkj6b6rsn", crop: :fill %>')">
            <%= link_to list.name, list_path(list) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to 'Create a movie list', new_list_path %>
  </div>
</div>
