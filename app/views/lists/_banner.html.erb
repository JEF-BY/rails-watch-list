<% if @list.photo.attached? %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, crop: :fill %>')">
    <h1><%= @list.name %></h1>
  </div>
<% else %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "uqinu0kxhlrvkj6b6rsn", crop: :fill %>')">
    <h1><%= @list.name %></h1>
  </div>
<% end %>
